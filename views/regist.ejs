<script>
  var dT = new DataTransfer();
  function upload(files){
    var file = files.files
    for (var i=0; i<file.length; i++){
      var src = URL.createObjectURL(file[i])
      $("#imagebox").append(
        `<img src=${src}>`
      )
      dT.items.add($("#images")[0].files[i])
    }
    document.querySelector("#images").files = dT.files
  }

